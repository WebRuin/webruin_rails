<%= stylesheet_link_tag 'contact.scss' %>
<form action="MAILTO:webruin@icloud.com" method="post" enctype="text/plain" class="cd-form floating-labels">
  <fieldset>
    <legend>Account Info</legend>

    <div class="error-message">
      <p>Please enter a valid email address</p>
    </div>

    <div class="icon">
      <input class="user" type="text" name="cd-name" id="cd-name" placeholder="Full" required>
    </div>

    <div class="icon">
      <input class="company" type="text" name="cd-company" placeholder="Company Name" id="cd-company">
    </div>

    <div class="icon">
        <input class="email error" type="email" name="cd-email" id="cd-email" placeholder="Email Address" required>
    </div>
  </fieldset>
  <fieldset>
    <legend>Project Info</legend>
    <div>
      <h4>Budget</h4>
      <p class="cd-select icon">
        <select class="budget &lt;">
            <option value="0">Select Budget</option>
            <option value="1">&lt;&#61; $400</option>
            <option value="2">$500</option>
            <option value="3">$600-800</option>
        </select>
      </p>
    </div>
    <div>
      <h4>Project type</h4>
      <ul class="cd-form-list">
          <li>
            <input type="radio" name="radio-button" id="cd-radio-1" checked>
            <label for="cd-radio-1">Bronze Package</label>
          </li>

          <li>
              <input type="radio" name="radio-button" id="cd-radio-2">
              <label for="cd-radio-2">Silver Package</label>
          </li>

          <li>
              <input type="radio" name="radio-button" id="cd-radio-3">
              <label for="cd-radio-3">Gold Package</label>
          </li>
        </ul>
      </div>
      <div class="icon">
        <textarea class="message" name="cd-textarea" id="cd-textarea" placeholder="Project Description" required></textarea>
      </div>
      <div>
        <input type="submit" value="Send Message">
      </div>
    </fieldset>
</form>
